<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ver"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="! Bienvenido escoja la Operacion que desea realizar !"
        android:id="@+id/textView3"
        android:gravity="center"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:textSize="30dp"
       />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:id="@+id/gridd"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="28dp"
        android:elevation="4dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Usuario:"
            android:id="@+id/textView10"
            android:textColor="#ffffff"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sin Datos"
            android:id="@+id/tvUsuario"
            android:textColor="#ffffff"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Numero de cuenta:"
            android:id="@+id/textView12"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sin Datos"
            android:id="@+id/tvCuenta"
            android:textColor="#ffffff"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Saldo Disponible:"
            android:id="@+id/sd"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sin Datos"
            android:id="@+id/tvSaldo"
            android:textColor="#ffffff"
            android:layout_marginLeft="15dp"/>
    </GridLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="30dp"
        android:orientation="vertical">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Consultar"
            android:id="@+id/btnconsultar"
            android:textSize="18dp"
            android:background="@drawable/mybutton"
            android:onClick="abrirConsulta"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Depo"
            android:id="@+id/btndepositar"
            android:textSize="18dp"
            android:background="@drawable/mybutton"
            android:onClick="abrirTransferencia"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Retirar"
            android:id="@+id/btnretirar"
            android:textSize="18dp"
            android:background="@drawable/mybutton"
            android:onClick="abrirRetiro"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Terminar"
            android:id="@+id/btnterminar"
            android:textSize="18dp"
            android:background="@drawable/mybutton"
            android:onClick="abrirLogin"/>

    </LinearLayout>
</LinearLayout>