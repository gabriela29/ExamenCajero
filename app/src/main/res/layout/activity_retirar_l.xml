<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ver"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cantidad a Retirar"
        android:id="@+id/textView3"
        android:layout_marginLeft="65dp"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:textSize="30dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#647729"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:background="@drawable/mybutton"
                android:layout_marginTop="30dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="50dp"
                android:text="Ingrese otra cantidad:"
                android:id="@+id/btnOtroMonto" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.24">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="100 soles"
                android:layout_marginLeft="20dp"
                android:id="@+id/button3"
                android:onClick="retiro100"/>

            <Button
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="200 soles"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn200"
                android:onClick="retiro200"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="500 soles"
                android:layout_marginLeft="20dp"
                android:id="@+id/btn500"
                android:onClick="retiro500"/>

            <Button
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="800 soles"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn800"
                android:onClick="retiro800"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <Button
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="1500 soles"
                android:layout_marginLeft="20dp"
                android:id="@+id/btn1500"
                android:onClick="retiro1500"/>

            <Button
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="1000 soles"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn1000"
                android:onClick="retiro1000"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            >

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="volver"
                android:id="@+id/button7"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/mybutton"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="aceptar"
                android:id="@+id/button8"
                android:background="@drawable/mybutton"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>